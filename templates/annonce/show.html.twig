{# show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Annonce - {{ annonce.titre }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">D√©tails de l'annonce</h1>
    
    <div class="card">
        {% if annonce.images|length > 0 %}
            <img src="{{ asset('uploads/images/' ~ annonce.images[0]) }}" class="card-img-top img-fluid" style="width: 10%;" alt="{{ annonce.titre }}">
        {% else %}
            <img src="{{ asset('images/default.jpg') }}" class="card-img-top img-fluid" style="width: 10%;" alt="Image par d√©faut">
        {% endif %}

        <div class="card-body">
            <h5 class="card-title">{{ annonce.titre }}</h5>
            <p class="card-text">{{ annonce.description }}</p>
            <p><strong>Cat√©gorie :</strong> {{ annonce.categorie }}</p>
            <p>Contact : {{ annonce.telephone ?: 'Non renseign√©' }}</p>
            <p><strong>Ville :</strong> {{ annonce.ville }}</p>
            <p><strong>Date de publication :</strong> {{ annonce.datePublication|date('d/m/Y H:i') }}</p>

            <a href="{{ path('app_annonce_index') }}" class="btn btn-secondary">Retour √† la liste</a>
            {% if annonce.utilisateur == app.user %}
                <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}" class="btn btn-warning">Modifier</a>
            {% endif %}
            <a href="{{ path('home') }}" class="btn btn-secondary">üè† Accueil</a>
            
            {% if annonce.utilisateur == app.user %}
                <form method="post" action="{{ path('app_annonce_delete', {'id': annonce.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette annonce ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
